@model IEnumerable<HW_03.Models.products>

@{
    ViewBag.Title = "Products List";
}

<link href="~/Content/Theme.css" rel="stylesheet" />

<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="text-center mb-4 fw-bold" style="color:#c0678b; text-shadow:1px 1px 2px rgba(255,228,240,0.5);">
        🚲 Products List
    </h2>

    <!-- Table Container -->
    <div class="table-responsive shadow-sm rounded-3 bg-white p-3">
        <table class="table table-striped table-hover align-middle text-center mb-0">
            <thead class="bg-pink text-white rounded-3">
                <tr>
                    <th>Image</th>
                    <th>@Html.DisplayNameFor(model => model.product_name)</th>
                    <th>@Html.DisplayNameFor(model => model.model_year)</th>
                    <th>@Html.DisplayNameFor(model => model.list_price)</th>
                    <th>@Html.DisplayNameFor(model => model.brands.brand_name)</th>
                    <th>@Html.DisplayNameFor(model => model.categories.category_name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string imageFile = ViewBag.ProductImages[item.product_id] as string;
                    <tr class="table-row-hover">
                       <td>
                           <img src="~/Content/Images/@imageFile"
                                alt="@item.product_name"
                                class="rounded shadow-sm"
                                style="width:70px; height:70px; object-fit:cover;" />
                       </td>
                        <td>@Html.DisplayFor(modelItem => item.product_name)</td>
                        <td>@Html.DisplayFor(modelItem => item.model_year)</td>
                        <td>@Html.DisplayFor(modelItem => item.list_price)</td>
                        <td>@Html.DisplayFor(modelItem => item.brands.brand_name)</td>
                        <td>@Html.DisplayFor(modelItem => item.categories.category_name)</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.product_id }, new { @class = "btn btn-outline-pink btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* 🌸 Table Colors */
    .bg-pink {
        background-color: #c8a2c8 !important;
    }

    .text-white {
        color: #fff !important;
    }

    .table-row-hover:hover {
        background-color: #f6b6c8cc !important;
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    /* 🌺 Buttons */
    .btn-outline-pink {
        border: 2px solid #c0678b;
        color: #c0678b;
        background-color: transparent;
        border-radius: 0.5rem;
        padding: 0.25rem 0.5rem;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

        .btn-outline-pink:hover {
            background-color: #c0678b;
            color: #fff;
            box-shadow: 0 4px 8px rgba(192, 103, 139, 0.3);
        }

    /* 🌼 Table Styling */
    table {
        border-radius: 1rem;
    }

        table th, table td {
            vertical-align: middle;
            padding: 0.75rem;
        }

    /* Container Shadow */
    .table-responsive {
        background-color: #fff9fb;
        border-radius: 1rem;
        box-shadow: 0 4px 12px rgba(242, 174, 199, 0.15);
    }
</style>

