@model HW_03.Models.products

@{
    ViewBag.Title = "Details";
}
<link href="~/Content/Theme.css" rel="stylesheet" />


<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold text-pink">📦 Product Details</h2>

    <div class="card shadow-sm rounded-3 p-4 bg-light">
        <div class="row align-items-center">
            <!-- 🧾 Left: Product Info -->
            <div class="col-md-7">
                <h4 class="mb-3 text-purple">Product Information</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 fw-semibold">Product Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.product_name)</dd>

                    <dt class="col-sm-4 fw-semibold">Model Year</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.model_year)</dd>

                    <dt class="col-sm-4 fw-semibold">List Price</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.list_price)</dd>

                    <dt class="col-sm-4 fw-semibold">Brand</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.brands.brand_name)</dd>

                    <dt class="col-sm-4 fw-semibold">Category</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.categories.category_name)</dd>
                </dl>

                <div class="mt-4 d-flex gap-2">
                    @Html.ActionLink("✏️ Edit", "Edit", new { id = Model.product_id }, new { @class = "btn btn-outline-pink" })
                    @Html.ActionLink("⬅ Back to List", "Index", null, new { @class = "btn btn-outline-purple" })
                </div>
            </div>

            <div class="text-center mb-4">
                <img src="~/Content/Images/@ViewBag.ImageFile"
                     alt="Product Image"
                     class="img-fluid rounded shadow-sm"
                     style="max-width: 400px;" />
            </div>

        </div>
    </div>
</div>


<style>
    /* Theme styling for Details view */
    .text-pink {
        color: #c0678b;
    }

    .text-purple {
        color: #a24a6a;
    }

    .card.bg-light {
        background-color: #fff5f8 !important;
    }

    dt {
        color: #9d6379;
    }

    dd {
        color: #4b3b47;
    }

    .btn-outline-pink {
        border: 2px solid #c0678b;
        color: #c0678b;
        background-color: transparent;
        border-radius: 0.5rem;
        padding: 0.4rem 1rem;
        transition: all 0.3s ease;
    }

        .btn-outline-pink:hover {
            background-color: #c0678b;
            color: #fff;
            box-shadow: 0 4px 8px rgba(192,103,139,0.3);
        }

    .btn-outline-purple {
        border: 2px solid #a24a6a;
        color: #a24a6a;
        background-color: transparent;
        border-radius: 0.5rem;
        padding: 0.4rem 1rem;
        transition: all 0.3s ease;
    }

        .btn-outline-purple:hover {
            background-color: #a24a6a;
            color: #fff;
            box-shadow: 0 4px 8px rgba(162,74,106,0.3);
        }
</style>
