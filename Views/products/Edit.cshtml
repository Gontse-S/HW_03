@model HW_03.Models.products

@{
    ViewBag.Title = "Edit Product";
}

<div class="container mt-5">
    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container mt-5">
            <h2 class="text-center mb-4 fw-bold" style="color:#c0678b;">
                ✏️ Edit Product
            </h2>

            <div class="row align-items-start">
                <!-- 🧾 LEFT: Form section -->
                <div class="col-md-7">
                    <div class="form-horizontal shadow-sm rounded-3 bg-white p-4">
                        <h4 class="fw-bold text-purple">Product Details</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.product_id)

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.product_name, htmlAttributes: new { @class = "fw-bold" })
                            @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.brand_id, "Brand", htmlAttributes: new { @class = "fw-bold" })
                            @Html.DropDownList("brand_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.brand_id, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.category_id, "Category", htmlAttributes: new { @class = "fw-bold" })
                            @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.model_year, htmlAttributes: new { @class = "fw-bold" })
                            @Html.EditorFor(model => model.model_year, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.model_year, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.list_price, htmlAttributes: new { @class = "fw-bold" })
                            @Html.EditorFor(model => model.list_price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.list_price, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center mt-4">
                            <input type="submit" value="💾 Save" class="btn btn-outline-pink btn-lg px-5 fw-bold" />
                        </div>
                        <div class="mt-3 text-center">
                            @Html.ActionLink("🔙 Back to List", "About", "Home", null, new { @class = "btn btn-outline-pink" })
                        </div>
                    </div>
                </div>

                <!-- 🖼 RIGHT: Image section -->
                <div class="col-md-5 text-center">
                    <div class="shadow-sm rounded-3 border bg-white p-3">
                        <h5 class="fw-bold mb-3" style="color:#9d6379;">Product Image</h5>
                        <img src="~/content/images/@ViewBag.ImageFile"
                             alt="@Model.product_name"
                             class="img-fluid rounded-3 shadow-sm"
                             style="max-height:350px; object-fit:cover;" />
                    </div>
                </div>
            </div>
        </div>
    }



</div>

<style>
    /* Form container */
    .form-horizontal {
        background-color: #fff9fb;
        border-radius: 1rem;
        box-shadow: 0 4px 12px rgba(242, 174, 199, 0.15);
        padding: 2rem;
    }

    /* Buttons */
    .btn-outline-pink {
        border: 2px solid #c0678b;
        color: #c0678b;
        background-color: transparent;
        border-radius: 0.5rem;
        padding: 0.5rem 1.5rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .btn-outline-pink:hover {
            background-color: #c0678b;
            color: #fff;
            box-shadow: 0 4px 8px rgba(192, 103, 139, 0.3);
        }

    /* Inputs */
    .form-control {
        border: 1px solid #eecad4;
        border-radius: 0.75rem;
        background-color: #fff9fb;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(238, 159, 177, 0.3);
            border-color: #e695ad;
        }

    /* Labels */
    label.fw-bold {
        color: #9d6379;
    }


</style>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
